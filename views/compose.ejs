<%- include('partials/header'); -%>
<h1>Criar</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label>Título</label>
        <input type="text" class="form-control" placeholder="Digite um título legal..." name="titulo">
        <label>Escreva o post</label>
        <textarea id="" cols="30" rows="5" class="form-control" placeholder="Digite seu texto maneiro..." name="texto"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Criar Post</button>
</form>
<%- include('partials/footer'); -%>